<!DOCTYPE html>
<html>
  <head>
    <title>Aspirations</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="container">
      <section class="row alerts text-center">
        <div class="col">
          <p><%= flash[:notice] %> </p>
          <h4><%= flash[:alert] %> </h4>
        </div>
      </section>
      <section class="row text-right">
        <div class="col">
          <% if user_signed_in? %>
            <p>current user: <%= current_user.email %></p>
            <p><%= link_to 'Log out', destroy_user_session_path, method: :delete %></p>
          <% end %>
        </div>
    </section>
  </header>


  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
