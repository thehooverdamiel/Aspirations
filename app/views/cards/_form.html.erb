
<section class="row">
	<div class="col">
		<%= form_for @card do |f| %>

			<div class="field">
				<%= f.label "Title" %><br>
				<%= f.text_field :title %>
			</div>

			<div class="field">
				<%= f.label "Content" %><br>
				<%= f.text_area :text %>
			</div>

			<div class="actions">
				<%= f.submit %>
			</div>
		<% end %>
	</div>
</section>